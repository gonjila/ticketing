{
  "compilerOptions": {
    "target": "ES6", // Set the target to ES6
    "module": "commonjs", // Use commonjs for Node.js compatibility
    "outDir": "./dist", // Output compiled JavaScript to the dist folder
    "esModuleInterop": true, // Allow default imports for commonjs modules
    "strict": true // Enable strict mode for type checking
  },
  "include": [
    "src/**/*.ts"
  ], // Include all TypeScript files in the src folder
  "exclude": [
    "node_modules"
  ] // Exclude node_modules folder
}